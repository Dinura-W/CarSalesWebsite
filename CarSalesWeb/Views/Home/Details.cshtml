<!--
    So the below im only calling one car so i use model with lowercase and 
    then i use the namespace then the class
-->
@model CarSalesWeb.Models.Car
@{
}
  <!-- this is just the card that only calls one car use underscore model-->

<div class="container my-5">
    <div class="row g-5 align-items-start">

        <!-- LEFT: IMAGE -->
        <div class="col-md-6">
            <div class="card car-detail-card">
                <img src="/Carimages/@Model.Image" alt="CAR" class="car-detail-image" />
            </div>
        </div>

        <!-- RIGHT: INFO -->
        <div class="col-md-6">
            <div class="car-detail-info">

                <h1 class="car-title">
                    @Model.Manufacturer @Model.Model
                </h1>

                <div class="car-detail-price">
                    $@Model.Price
                </div>

                <div class="car-meta">
                    <span>@Model.Year</span>
                    <span>•</span>
                    <span>@Model.Category</span>
                </div>

                <hr />

                <div class="car-specs">
                    <p><strong>Odometer:</strong> @Model.Odometer KMS</p>
                    <p><strong>Category:</strong> @Model.Category</p>
                </div>

            </div>
        </div>

    </div>
</div>

